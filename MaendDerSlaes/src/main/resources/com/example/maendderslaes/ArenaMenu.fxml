<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.maendderslaes.Controller"
            style="-fx-background-image: url('/images/VælgDinArena.png');
                   -fx-background-repeat: stretch;
                   -fx-background-size: 100% 100%;
                   -fx-background-position: center center;
                   -fx-background-color: #ff0000;">

    <Button onAction="#goToTræningsArena"
            style="-fx-background-color: rgba(179,5,237,0.3); -fx-opacity: 0;
                   -fx-cursor: hand;"
            prefWidth="550"
            prefHeight="675"
            AnchorPane.leftAnchor="90.0"
            AnchorPane.topAnchor="250.0"/>

    <Button onAction="#goToBorgen"
            style="-fx-background-color: rgba(179,5,237,0.3); -fx-opacity: 0;
                   -fx-cursor: hand;"
            prefWidth="550"
            prefHeight="675"
            AnchorPane.leftAnchor="660.0"
            AnchorPane.rightAnchor="660.0"
            AnchorPane.topAnchor="250.0"/>

    <Button onAction="#goToColosseum"
            style="-fx-background-color: rgba(179,5,237,0.3); -fx-opacity: 0;
                   -fx-cursor: hand;"
            prefWidth="550"
            prefHeight="675"
            AnchorPane.rightAnchor="90.0"
            AnchorPane.topAnchor="250.0"/>

    <Button onAction="#goToCityCenter"
            text="GO BACK"
            style="-fx-background-color: #FFD700;
               -fx-cursor: hand;
               -fx-text-fill: #000000;
               -fx-font-family: 'Comic Sans MS';
               -fx-font-size: 15;
               -fx-font-weight: bold;
               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 0);
               -fx-min-width: 70;
               -fx-min-height: 30;"
            AnchorPane.rightAnchor="50.0"
            AnchorPane.bottomAnchor="80.0"/>

</AnchorPane>