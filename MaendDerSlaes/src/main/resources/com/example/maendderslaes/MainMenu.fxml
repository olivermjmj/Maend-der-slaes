<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.maendderslaes.Controller"
            fx:id="root">

    <VBox spacing="10.0" alignment="CENTER"
          AnchorPane.leftAnchor="600"
          AnchorPane.rightAnchor="725"
          AnchorPane.topAnchor="560">

        <TextField fx:id="usernameField"
                   promptText="Brugernavn"
                   maxWidth="200"
                   style="-fx-min-height: 20;
                      -fx-max-height: 30;
                      -fx-font-family: 'Comic Sans MS';
                      -fx-font-size: 14;
                      -fx-background-color: #2A2A2A;
                      -fx-text-fill: #FFD700;
                      -fx-prompt-text-fill: #FFD700;
                      -fx-effect: dropshadow(three-pass-box, rgba(255,215,0,0.6), 10, 0, 0, 0);"/>

        <PasswordField fx:id="passwordField"
                       promptText="Adgangskode"
                       maxWidth="200"
                       style="-fx-min-height: 20;
                          -fx-max-height: 30;
                          -fx-font-family: 'Comic Sans MS';
                          -fx-font-size: 14;
                          -fx-background-color: #2A2A2A;
                          -fx-text-fill: #FFD700;
                          -fx-prompt-text-fill: #FFD700;
                          -fx-effect: dropshadow(three-pass-box, rgba(255,215,0,0.6), 10, 0, 0, 0);"/>
    </VBox>

    <VBox spacing="20.0" alignment="CENTER"
          AnchorPane.leftAnchor="600.0"
          AnchorPane.rightAnchor="725.0"
          AnchorPane.topAnchor="660.0">

        <Button onAction="#login"
                text="LOGIN"
                maxWidth="200"
                style="-fx-background-color: #FFD700;
                   -fx-cursor: hand;
                   -fx-text-fill: #000000;
                   -fx-font-family: 'Comic Sans MS';
                   -fx-font-size: 18;
                   -fx-font-weight: bold;
                   -fx-min-height: 40;
                   -fx-effect: dropshadow(three-pass-box, rgba(255,215,0,0.8), 15, 0.5, 0, 0);
                   -fx-border-color: #DAA520;
                   -fx-border-width: 2;
                   -fx-background-radius: 5;
                   -fx-border-radius: 5;"/>

        <Button onAction="#register"
                text="REGISTER"
                maxWidth="200"
                style="-fx-background-color: #FFD700;
                   -fx-cursor: hand;
                   -fx-text-fill: #000000;
                   -fx-font-family: 'Comic Sans MS';
                   -fx-font-size: 14;
                   -fx-font-weight: bold;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 0);"/>

        <Button onAction="#guestLogin"
                text="PLAY AS GUEST"
                maxWidth="200"
                style="-fx-background-color: #FFD700;
                   -fx-cursor: hand;
                   -fx-text-fill: #000000;
                   -fx-font-family: 'Comic Sans MS';
                   -fx-font-size: 14;
                   -fx-font-weight: bold;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 0);"/>
    </VBox>
</AnchorPane>
