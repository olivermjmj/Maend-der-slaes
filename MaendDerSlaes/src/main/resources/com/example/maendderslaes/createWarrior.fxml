<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.maendderslaes.Controller">
    
    <VBox alignment="CENTER" spacing="20.0"
          style="-fx-background-image: url('file:data/images/SkabDinKrigerScene.png');
                 -fx-background-repeat: no-repeat;
                 -fx-background-size: cover;
                 -fx-background-position: center center;">
        
        <!-- Tilbage-knap i top-venstre hjÃ¸rne -->
        <VBox alignment="BOTTOM_RIGHT">
            <padding>
                <Insets top="900" left="150" right="20"/>
            </padding>
            <Button onAction="#goBack" text="Return to MainMenu"
                    style="-fx-background-color: #FFD700;
                           -fx-text-fill: #000000;
                           -fx-font-family: 'Comic Sans MS';
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 0);
                           -fx-min-width: 100;
                           -fx-min-height: 30;"/>
        </VBox>
        
        <!-- GO TO CITY CENTER knap i bunden -->
        <VBox alignment="BOTTOM_CENTER">
            <padding>
                <Insets bottom="300" left="800" right="50" top="50"/>
            </padding>
            <Button onAction="#goToCityCenter" text="GO TO CITY CENTER"
                    style="-fx-background-color: #FFD700;
                           -fx-text-fill: #000000;
                           -fx-font-family: 'Comic Sans MS';
                           -fx-font-size: 18;
                           -fx-font-weight: bold;
                           -fx-min-height: 40;
                           -fx-min-width: 200;
                           -fx-effect: dropshadow(three-pass-box, rgba(255,215,0,0.8), 15, 0.5, 0, 0);
                           -fx-border-color: #DAA520;
                           -fx-border-width: 2;
                           -fx-background-radius: 5;
                           -fx-border-radius: 5;"/>
        </VBox>
    </VBox>
</StackPane>